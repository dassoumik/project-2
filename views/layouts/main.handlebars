<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- name that appears in tab -->
    <title>Puppy Play</title>
    <!--- font awesome --->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- link to foundation -->
    <link rel="stylesheet" href="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">
    <!-- link to bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- Link for our CSS sheet -->
    <link href="./stylesheet.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <nav class="nav navbar bg-danger text-white"> 
      <h1 style="margin-left: 10px" >
        <a class="text-white" style="text-decoration: none;" href="/">Puppy Play</a>
      </h1>
      <div style="text-align: right;">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a class="btn nav-item ml-auto mr-5 pr-5 text-white" style="margin-right: 10px; text-decoration:none;" href="/profile">profile</a> 
        <a class="btn nav-item text-right text-white ml-auto mr-4" style="margin-right: 10px; text-decoration: none" id="logout" href="/">logout</a>
        {{else}}
        <a class="btn nav-item text-right text-white ml-auto mr-4" style="margin-right: 10px; text-decoration: none" id="login" href="/login">login</a>
        {{/if}}
       </div> 
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>

    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>